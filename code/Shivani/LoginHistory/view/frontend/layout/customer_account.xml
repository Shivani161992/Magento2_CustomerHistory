<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Customer\Block\Account\SortLinkInterface" name="customer-login-history-tab">
                <arguments>
                    // add a link into the account section
                    // give that link "Login History" name
                    <argument name="path" xsi:type="string">history/customer/index</argument>
                    <argument name="label" xsi:type="string" translate="true">Login History</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>